<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 选择状态 -->
    <attr name="item_selector" format="reference"/>

    <!-- 4周可画分割线的TextView -->
    <declare-styleable name="DivideTextView">
        <attr name="dt_drawable" format="reference|color"/>
        <attr name="dt_dividerSize" format="dimension"/>
        <!-- 分割线padding，左右上下padding，上下左右padding -->
        <attr name="dt_dividerPadding" format="dimension"/>
        <attr name="dt_divideGravity">
            <flag name="none" value="0x01"/>
            <flag name="left" value="0x02"/>
            <flag name="top" value="0x04"/>
            <flag name="right" value="0x08"/>
            <flag name="bottom" value="0x10"/>
        </attr>
    </declare-styleable>

    <!--CenterGridLayout 居中对齐表格-->
    <declare-styleable name="CenterGridLayout">
        <attr name="cl_colCount" format="integer"/>
        <attr name="cl_itemWidth" format="dimension"/>
        <attr name="cl_itemHeight" format="dimension|enum">
            <enum name="auto_height" value="-1"/>
        </attr>
        <attr name="cl_horizontalPadding" format="dimension"/>
        <attr name="cl_verticalPadding" format="dimension"/>
        <attr name="cl_itemSizeMode" format="enum">
            <enum name="item_width" value="0x00"/>
            <enum name="horizontal_padding" value="0x01"/>
        </attr>
    </declare-styleable>

    <!-- 指向style的引入类型 -->
    <attr name="Def_Style_Attr_DividerTextView" format="reference"/>

    <!-- .9 气泡图 BubbleTextView -->
    <declare-styleable name="BubbleTextView">
        <attr name="bt_arrow_width" format="dimension"/>
        <attr name="bt_arrow_height" format="dimension"/>
        <attr name="bt_radius" format="dimension"/>
        <attr name="bt_arrow_offset" format="dimension"/>
        <attr name="bt_bubble_color" format="color|reference"/>
        <attr name="bt_arrow_direction" format="enum">
            <enum name="LEFT" value="0"/>
            <enum name="TOP" value="1"/>
            <enum name="RIGHT" value="2"/>
            <enum name="BOTTOM" value="3"/>
        </attr>
        <attr name="bt_arrow_center" format="boolean"/>
    </declare-styleable>

    <!-- flowLayout -->
    <declare-styleable name="FlowLayout">
        <attr name="fl_horizontal_space" format="dimension"/>
        <attr name="fl_vertical_space" format="dimension"/>
        <attr name="fl_gravity" format="enum">
            <enum name="LEFT" value="0"/>
            <enum name="HORIZONTAL_CENTER" value="1"/>
            <enum name="RIGHT" value="2"/>
            <enum name="BOTTOM" value="3"/>
        </attr>
    </declare-styleable>

    <!-- SelectFlowLayout -->
    <declare-styleable name="SelectFlowLayout">
        <attr name="fl_item_selector" format="reference"/>
        <attr name="fl_select_mode" format="enum">
            <enum name="SINGLE" value="0"/>
            <enum name="MULTI" value="1"/>
            <enum name="RECTANGLE" value="2"/>
        </attr>
        <attr name="fl_max_selected_size" format="integer"/>
    </declare-styleable>
</resources>